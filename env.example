# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# Database
DATABASE_URL=postgresql+asyncpg://pricebot:password@db:5432/pricebot
DATABASE_URL_SYNC=postgresql+psycopg2://pricebot:password@db:5432/pricebot

# Redis/Celery
REDIS_URL=redis://redis:6379/1
CELERY_BROKER=redis://redis:6379/1
CELERY_BACKEND=redis://redis:6379/2

# Parser API Keys (добавьте ключи для каждого клиента)
PARSER_API_KEY_SEB=your_parser_api_key_seb
PARSER_API_KEY_DF=your_parser_api_key_df

# Ozon API Configuration
OZON_CLIENT_ID_SEB=your_ozon_client_id_seb
OZON_API_KEY_SEB=your_ozon_api_key_seb
OZON_CLIENT_ID_DF=your_ozon_client_id_df
OZON_API_KEY_DF=your_ozon_api_key_df

# Wildberries API Configuration
WB_API_KEY_SEB=your_wb_api_key_seb
WB_API_KEY_DF=your_wb_api_key_df

# Logging
LOG_LEVEL=INFO

# Production Settings (for GitLab CI/CD)
